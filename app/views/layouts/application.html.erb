<!DOCTYPE html>
<html>
<head>
  <title>Summoners Universe</title>
  <%= stylesheet_link_tag    'application' %>
  <%= stylesheet_link_tag     'normalize' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
  <nav class= "navbar navbar-dark navbar-full bg-inverse">
    <div class = "nav navbar-nav">

    <% if user_signed_in? %>
        <%= link_to "Summoner's Universe", "/",  class: "nav-link root" %></li>
        <%= link_to 'Logout', destroy_user_session_path, method: :delete,  class: "nav-link non-root" %>
        <%= link_to current_user.email, current_user ,  class: "nav-link non-root"%></li>
    <% else %>
        <%= link_to "Summoner's Universe", root_path,  class: "nav-link root" %>
        <%= link_to 'Signup', new_user_registration_path,  class: "nav-link non-root" %>
        <%= link_to 'Login', new_user_session_path,  class: "nav-link non-root" %>
   <% end %>
   </div>
 </nav>
</header>

  <div class = "container">
  <div class = "row">
    <div class="col-sm-12"><%= alert %></div>
  </div>
  </div>

    <%= yield %>
</body>
</html>