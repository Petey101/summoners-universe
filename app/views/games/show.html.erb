<div class = "row">
  <div class = "twelve columns" id="countdown-holder">
    <%=@game.time_limit%>
  </div>
</div>

<div class = "row">
	<div class = "twelve columns">
		You are <%= @game.picked_champion %>!
		<%= @current_battle.question_text %>
		<% @current_battle.possible_answers.each do |possible| %>
    		<%= link_to possible, controller: :games, action: :check_answer, game_id: @game.id, battle_id: @current_battle.id, chosen_answer: possible %>
		<% end %>
	</div>
</div>
